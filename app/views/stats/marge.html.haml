%h2 marge

.btn-group{role: 'group'}
  %a.btn.btn-info{href: stats_marge_path(period: 'hour'), class: [(@period == 'hour') && 'active' ]}
    hour
  %a.btn.btn-info{href: stats_marge_path(period: 'day'),  class: [(@period == 'day')  && 'active' ]}
    day
  %a.btn.btn-info{href: stats_marge_path(period: 'week'), class: [(@period == 'week') && 'active' ]}
    week
  %a.btn.btn-info{href: stats_marge_path(period: 'month'), class: [(@period == 'month') && 'active' ]}
    month

%h3 btc balance
= line_chart [{name: 'buy_marge', data: @buy_marge},{name:'sell_marge', data: @sell_marge}]

%h3 bids vs asks
= line_chart [{name: 'paymium_best_bid', data: @paymium_best_bid},{name:'paymium_best_ask', data: @paymium_best_ask},{name:'kraken_best_ask', data: @kraken_best_ask},{name:'kraken_best_bid', data: @kraken_best_bid}]

