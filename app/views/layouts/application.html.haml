!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Trader
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    = navbar static: :top do
      = navbar_header brand: fa_icon('line-chart', class: 'fa-2x', text: 'trader'), brand_link: '/'
      = navbar_collapse do
        = navbar_group class: 'my_menu', id: 'menu' do
          = navbar_item fa_icon('home', class: 'fa-2x', text: 'home'), root_path
          = navbar_item fa_icon('book', class: 'fa-2x', text: 'PM order book'), paymium_service_sdepth_path
          = navbar_dropdown fa_icon('bank', class: 'fa-2x', text: 'trades') do
            = navbar_item fa_icon('bars', class: 'fa-2x', text: 'lastest trades'), trades_path
            = navbar_item fa_icon('bar-chart', class: 'fa-2x', text: 'graph'), trades_graph_path


          = navbar_item fa_icon('clock-o', class: 'fa-2x', text: 'resque'), '/resque'

          = navbar_dropdown fa_icon('bar-chart', class: 'fa-2x', text: 'markets') do
            = navbar_item 'https://bitcoinwisdom.com/markets/kraken/btceur' do
              %img{src: '/pictures/kraken.jpg', height: '30'}
              kraken
            = navbar_item 'https://advance.paymium.com/#/en/Paymium/eur/trading' do
              %img{src: '/pictures/paymium.jpg', height: '30'}
              paymium


    .container
      = yield
